<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a300.hiking.test.trackgps.MainActivity">

    <TextView
        android:id="@+id/latLabel"
        android:layout_width="160dp"
        android:layout_height="31dp"
        android:text="Latitude:"
        android:textSize="24sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/longLabel" />

    <TextView
        android:id="@+id/longLabel"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:text="Longitude:"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/longDisplay"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/latDisplay"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintLeft_toRightOf="@+id/latLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/latLabel" />

    <TextView
        android:id="@+id/longDisplay"
        android:layout_width="152dp"
        android:layout_height="41dp"
        android:layout_marginRight="16dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="140dp" />
</android.support.constraint.ConstraintLayout>
